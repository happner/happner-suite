{
  "$id": "services-security-schema.json",
  "$ref": "#/definitions/ServicesSecurity",
  "definitions": {
    "ServicesSecurity": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "config": {
          "$ref": "#/definitions/SecurityConfig"
        }
      },
      "required": [
        "config"
      ],
      "title": "ServicesSecurity"
    },
    "SecurityConfig": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "accountLockout": {
          "$ref": "#/definitions/AccountLockout"
        },
        "activateSessionManagement": {
          "type": "boolean"
        },
        "adminGroup": {
          "$ref": "#/definitions/AdminGroup"
        },
        "adminUser": {
          "$ref": "#/definitions/AdminUser"
        },
        "allowAnonymousAccess": {
          "type": "boolean"
        },
        "authProviders": {
          "$ref": "#/definitions/AuthProviders"
        },
        "defaultAuthProvider": {
          "type": "string"
        },
        "defaultNonceTTL": {
          "type": "number"
        },
        "disableDefaultAdminNetworkConnections": {
          "type": "boolean"
        },
        "cookieName": {
          "type": "string"
        },
        "cookieDomain": {
          "type": "string"
        },
        "httpsCookie": {
          "type": "string"
        },
        "lockTokenToLoginType": {
          "type": "boolean"
        },
        "lockTokenToUserId": {
          "type": "boolean"
        },
        "logSessionActivity": {
          "type": "boolean"
        },
        "pbkdf2Iterations": {
          "type": "integer"
        },
        "profiles": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Profile"
          }
        },
        "sessionActivityTTL": {
          "type": "number"
        },
        "sessionTokenSecret": {
          "type": "string"
        },
        "updateSubscriptionsOnSecurityDirectoryChanged": {
          "type": "boolean"
        }
      },
      "required": [
      ],
      "title": "SecurityConfig"
    },
    "AccountLockout": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "attempts": {
          "type": "integer",
          "minimum": 1,
          "maximum": 20
        },
        "enabled": {
          "type": "boolean"
        },
        "retryInterval": {
          "type": "integer",
          "minimum": 1000,
          "maximum": 60000
        }
      },
      "required": [
      ],
      "title": "AccountLockout",
      "allOf": [
        {
          "if": {
            "properties": {
              "enabled": true
            }
          },
          "then": {
            "required": [
              "retryInterval",
              "attempts"
            ]
          }
        }
      ]
    },
    "AdminGroup": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "custom_data": {
          "$ref": "#/definitions/CustomData"
        }
      },
      "required": [
      ],
      "title": "AdminGroup"
    },
    "AdminUser": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "password": {
          "type": "string"
        },
        "custom_data": {
          "$ref": "#/definitions/CustomData"
        },
        "publicKey": {
          "type": "string"
        }
      },
      "required": [
      ],
      "title": "AdminUser"
    },
    "AuthProviders": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "testProvider": {
          "$ref": "#/definitions/TestProvider"
        }
      },
      "required": [
        "testProvider"
      ],
      "title": "AuthProviders"
    },
    "CustomData": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "title": "CustomData"
    },
    "TestProvider": {
      "type": "object",
      "additionalProperties": false,
      "title": "TestProvider"
    },
    "Profile": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "policy": {
          "$ref": "#/definitions/Policy"
        },
        "session": {
          "$ref": "#/definitions/Session"
        }
      },
      "required": [
        "name",
        "policy",
        "session"
      ],
      "title": "Profile"
    },
    "Policy": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "ttl": {
          "type": "number"
        },
        "inactivity_threshold": {
          "type": [
            "number"
          ]
        }
      },
      "required": [
        "inactivity_threshold",
        "ttl"
      ],
      "title": "Policy"
    },
    "Session": {
      "type": "object",
      "additionalProperties": true,
      "title": "Session"
    }
  }
}
