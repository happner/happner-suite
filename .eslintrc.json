{
  	"env": {
		"es2021": true,
		"node": true,
		"browser": true,
		"mocha": true
	},
	"extends": ["eslint:recommended", "prettier"],
	"plugins": ["prettier"],
	"ignorePatterns": ["docs", "node_modules/"],
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 2018
	},
  	"rules": {
		"default-case": "error",
		"eqeqeq": ["error", "always", {"null": "ignore"}],
		"no-console": "warn",
		"no-useless-return": "error",
		"prettier/prettier": "error"
  	}
}
